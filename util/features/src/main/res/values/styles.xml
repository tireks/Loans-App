<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Leonov.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name = "android:windowBackground">@color/day_background_primary</item>
        <item name = "android:colorBackground">@color/day_background_secondary</item>
        <item name="android:unfocusedMonthDateColor">@color/day_background_disable</item>
        <item name="android:colorBackgroundCacheHint">@color/day_background_invert</item>
        <item name="android:textColorPrimary">@color/day_font_primary</item>
        <item name="android:textColorSecondary">@color/day_font_secondary</item>
        <item name="android:icon">@color/day_icon_primary</item>
        <item name="android:colorButtonNormal">@color/day_permanent_primary</item>
        <item name="android:titleTextColor">@color/day_permanent_primary_dark</item>
        <item name="android:colorFocusedHighlight">@color/day_indicator_error</item>
        <item name="android:colorMultiSelectHighlight">@color/day_indicator_attention</item>
        <item name="android:colorPressedHighlight">@color/day_indicator_positive</item>
        <item name="android:panelColorBackground">@color/day_border_primary</item>

    </style>

    <style name="text_headline_1">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat_semibold</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="text_headline_2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="text_body">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="text_body_2">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:textColorPrimary</item>
    </style>

    <style name="image_toolbar_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
    </style>

    <style name="image_toolbar_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
    </style>

    <style name="text_caption">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="button_yellow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_button_yellow</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="button_grey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/bg_button_grey</item>
        <item name="android:elevation">0dp</item>
    </style>

</resources>
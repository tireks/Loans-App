<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/globalContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Leonov.NoActionBar"
    tools:context=".menuTab.loansScreen.ui.LoansFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:windowBackground">

        <View
            android:id="@+id/toolbarView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@id/toolbarSpacer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/toolbarBackButton"
            style="@style/image_toolbar_left"
            android:src="@drawable/ic_arrow_left"
            app:layout_constraintStart_toStartOf="@id/toolbarView"
            app:layout_constraintTop_toTopOf="@id/toolbarView" />


        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/toolbarText"
            style="@style/text_headline_2"
            android:layout_marginStart="@dimen/huge_margin"
            android:layout_marginTop="@dimen/normal_margin"
            android:text="@string/loans_screen_toolbar"
            app:layout_constraintStart_toEndOf="@id/toolbarBackButton"
            app:layout_constraintTop_toTopOf="@id/toolbarView" />

        <Space
            android:id="@+id/toolbarSpacer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/normal_margin"
            app:layout_constraintTop_toBottomOf="@id/toolbarText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contentRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/normal_margin"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbarView" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:indeterminate="true"
        android:indeterminateTint="?android:icon"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
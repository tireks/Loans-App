<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground"
    android:theme="@style/Theme.Leonov.NoActionBar">

    <ImageView
        android:id="@+id/bannerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_slide_2_png"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/headlineText"
        style="@style/text_headline_1"
        android:layout_width="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginStart="@dimen/normal_margin"
        android:layout_marginTop="@dimen/semi_normal_margin"
        android:text="@string/slide2_headline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bannerImage" />

    <TextView
        android:id="@+id/bodyText1"
        style="@style/text_body"
        android:layout_width="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="@dimen/semi_normal_margin"
        android:text="@string/slide2_body1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headlineText" />

    <TextView
        android:id="@+id/bodyText2"
        style="@style/text_body"
        android:layout_width="0dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/slide2_body2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bodyText1" />

</androidx.constraintlayout.widget.ConstraintLayout>
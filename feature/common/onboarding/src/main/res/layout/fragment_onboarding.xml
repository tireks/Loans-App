<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/globalContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Leonov.NoActionBar">

    <View
        android:id="@+id/toolbarView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/toolbarSpacer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/toolbarCrossButton"
        style="@style/image_toolbar_left"
        android:src="@drawable/ic_cross"
        app:layout_constraintStart_toStartOf="@id/toolbarView"
        app:layout_constraintTop_toTopOf="@id/toolbarView" />

    <Space
        android:id="@+id/toolbarSpacer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_margin"
        app:layout_constraintTop_toBottomOf="@id/toolbarCrossButton" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/dotsView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarView" />

    <View
        android:id="@+id/dotsView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/dotsSpacer" />

    <Space
        android:id="@+id/dotsSpacer"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        app:layout_constraintBottom_toTopOf="@id/rightButton" />

    <ru.tinkoff.scrollingpagerindicator.ScrollingPagerIndicator
        android:id="@+id/springDotsIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/rightButton"
        app:layout_constraintEnd_toEndOf="@id/dotsView"
        app:layout_constraintStart_toStartOf="@id/dotsView"
        app:layout_constraintTop_toTopOf="@id/rightButton"
        app:spi_dotColor="?android:unfocusedMonthDateColor"
        app:spi_dotSelectedColor="?android:icon"
        app:spi_dotSelectedSize="8dp"
        app:spi_dotSize="8dp" />

    <Button
        android:id="@+id/leftButton"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_left_button_placeholder"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/rightButton"
        app:layout_constraintStart_toStartOf="@id/dotsView"
        app:layout_constraintTop_toTopOf="@id/rightButton" />

    <Button
        android:id="@+id/rightButton"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:text="@string/fragment_left_button"
        android:textColor="?android:textColorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/dotsView"
        app:layout_constraintEnd_toEndOf="@id/dotsView" />


</androidx.constraintlayout.widget.ConstraintLayout>